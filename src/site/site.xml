<project name="${project.name}" xmlns="http://maven.apache.org/DECORATION/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">
  <skin>
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.4</version>
  </skin>
  <custom>
    <fluidoSkin>
      <topBarEnabled>true</topBarEnabled>
      <sideBarEnabled>true</sideBarEnabled>
      <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
      <copyrightClass>pull-right</copyrightClass>
      <gitHub>
        <projectId>rjenkinsjr/smart-reactor-maven-extension</projectId>
        <ribbonOrientation>right</ribbonOrientation>
        <ribbonColor>black</ribbonColor>
      </gitHub>
      <profile>pre-release</profile>
    </fluidoSkin>
  </custom>
  <body>
    <menu name="User Guide">
        <item name="Home" href="index.html" />
        <item name="Why Use The Smart Reactor?" href="why.html" />
    </menu>
    <menu ref="reports" />
  </body>
</project>
